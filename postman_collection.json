{
  "info": {
    "name": "Payment Gateway API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "cursor",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Payment Create",
      "item": [
        {
          "name": "1. 성공 - MockPG (partnerId=1)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partnerId\": 1,\n  \"amount\": 10000,\n  \"cardNumber\": \"1111-1111-1111-1111\",\n  \"birthDate\": \"19900101\",\n  \"expiry\": \"1227\",\n  \"cardPassword\": \"12\",\n  \"productName\": \"테스트상품\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments"]
            }
          }
        },
        {
          "name": "2. 성공 200 - TestPG (partnerId=2, 카드 1111)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partnerId\": 2,\n  \"amount\": 15000,\n  \"cardNumber\": \"1111-1111-1111-1111\",\n  \"birthDate\": \"19900101\",\n  \"expiry\": \"1227\",\n  \"cardPassword\": \"12\",\n  \"productName\": \"외부PG테스트\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments"]
            }
          }
        },
        {
          "name": "3. 실패 422 - TestPG (카드 2222, 도난/분실)",
