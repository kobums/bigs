            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partnerId\": 2,\n  \"amount\": 1001,\n  \"cardNumber\": \"2222-2222-2222-2222\",\n  \"birthDate\": \"19900101\",\n  \"expiry\": \"1227\",\n  \"cardPassword\": \"12\",\n  \"productName\": \"실패테스트-도난분실\"\n}"
            },
            "description": "errorCode: STOLEN_OR_LOST (1001)",
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments"]
            }
          }
        },
        {
          "name": "4. 실패 422 - TestPG (카드 2222, 한도초과)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partnerId\": 2,\n  \"amount\": 1002,\n  \"cardNumber\": \"2222-2222-2222-2222\",\n  \"birthDate\": \"19900101\",\n  \"expiry\": \"1227\",\n  \"cardPassword\": \"12\",\n  \"productName\": \"실패테스트-한도초과\"\n}"
            },
            "description": "errorCode: INSUFFICIENT_LIMIT (1002)",
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments"]
            }
          }
        },
        {
          "name": "5. 실패 422 - TestPG (카드 2222, 정지/만료)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partnerId\": 2,\n  \"amount\": 1003,\n  \"cardNumber\": \"2222-2222-2222-2222\",\n  \"birthDate\": \"19900101\",\n  \"expiry\": \"1227\",\n  \"cardPassword\": \"12\",\n  \"productName\": \"실패테스트-정지만료\"\n}"
            },
            "description": "errorCode: EXPIRED_OR_BLOCKED (1003)",
            "url": {
              "raw": "{{baseUrl}}/api/v1/payments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "payments"]
            }
          }
        },
        {
          "name": "6. 실패 422 - TestPG (카드 2222, 위조/변조)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partnerId\": 2,\n  \"amount\": 1004,\n  \"cardNumber\": \"2222-2222-2222-2222\",\n  \"birthDate\": \"19900101\",\n  \"expiry\": \"1227\",\n  \"cardPassword\": \"12\",\n  \"productName\": \"실패테스트-위조변조\"\n}"
            },
            "description": "errorCode: TAMPERED_CARD (1004)",
